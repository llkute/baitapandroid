<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/size250dp">
    <ImageView
        android:id="@+id/imHienThiMonAn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size50dp"
        android:layout_gravity="bottom"
        android:background="@color/backgroundtransparentGreen"
        >
        <TextView
            android:id="@+id/txtTenLoaiMonAnThucDon"
            android:textStyle="bold"
            android:textSize="@dimen/size18sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ten Ban An"
            />
    </FrameLayout>

</FrameLayout>