<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/size250dp">
    <ImageView
        android:id="@+id/imHienThiMonAn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroundheader"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/backgroundtransparentGreen"
        android:padding="@dimen/size10dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/txtTenMonAnThucDon"
            android:textStyle="bold"
            android:textSize="@dimen/size18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ten Ban An"
            android:layout_gravity="center|left"
            />
        <TextView
            android:id="@+id/txtGiaMonAn"
            android:textStyle="bold"
            android:layout_gravity="center|left"
            android:textSize="@dimen/size18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gia"
            />
    </LinearLayout>

</FrameLayout>