<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txtTenBanAn"
        android:textSize="@dimen/size18sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size10dp"
        android:textColor="@color/colorPrimary"
        />

    <ImageView
        android:layout_width="@dimen/size100dp"
        android:layout_height="@dimen/size100dp"
        android:id="@+id/imgBanAn"
        android:src="@drawable/banan"
        android:layout_below="@+id/txtTenBanAn"
        android:layout_marginBottom="@dimen/size10dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgGoiMon"
        android:layout_below="@+id/imgBanAn"
        android:src="@drawable/goimon"
        android:layout_marginLeft="@dimen/size5dp"
        android:visibility="invisible"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgThanhToan"
        android:layout_below="@+id/imgBanAn"
        android:layout_toRightOf="@+id/imgGoiMon"
        android:src="@drawable/thanhtoan"
        android:layout_marginLeft="@dimen/size5dp"
        android:visibility="invisible"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgAnButton"
        android:layout_below="@+id/imgBanAn"
        android:layout_toRightOf="@+id/imgThanhToan"
        android:src="@drawable/anbutton"
        android:layout_marginLeft="@dimen/size5dp"
        android:visibility="invisible"
        />
</RelativeLayout>